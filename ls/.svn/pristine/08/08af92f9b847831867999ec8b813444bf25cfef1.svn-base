<script>
function setStatus(id, status) {
	$.ajax({
		type : 'get',
		url : '/admin/order/status',
		data : 'id=' + id + '&status=' + status,
		dataType : 'json',
		success : function(ret) {
			if (ret['code'] != 200) {
				return alert(ret['msg'] ? ret['msg'] : '操作失败');
			}
			window.location.reload();
		}
	});
}
</script>



